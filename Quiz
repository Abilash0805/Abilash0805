if answer.lower() == "explainability":
    print('Correct!')
    score += 1
else:
    print("Incorrect!")

answer = input("_____are used to automatically sort garbadge ")
if answer.lower() == "smart bins":
    print('correct!')
    score += 1
else:
    print("incorrect")

